<form id="site-create-form" action="{{ path('app_site_create') }}"
      method="POST">
    
    <div class="form-group mb-3">
        <label for="domain" class="form-label fs-5">Domain</label>
        <input type="text" class="form-control" id="domain" name="domain">
    </div>

    <div class="form-group mb-3">
        <label for="title" class="form-label fs-5">Title</label>
        <input type="text" class="form-control" id="title" name="title">
    </div>

    <div class="form-group mb-3">
        <label for="phpVersion" class="form-label fs-5">Php Version</label>
        <select class="form-control" id="phpVersion" name="phpVersion">
            <option value="5.6">php5.6-fpm</option>
            <option value="7.4">php7.4-fpm</option>
            <option value="8.2">php8.2-fpm</option>
        </select>
    </div>

    <div class="form-group mb-4">
        <label for="documentRoot" class="form-label fs-5">Document Root</label>
        <input type="text" class="form-control" id="documentRoot"
               name="documentRoot" value="/var/www/">
    </div>


    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">
            <i class="fa-regular fa-floppy-disk me-2"></i>
            Save
        </button>
    </div>
</form>