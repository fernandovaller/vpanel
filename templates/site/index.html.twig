{% extends 'base.html.twig' %}

{% block title %}Hello SiteController!{% endblock %}

{% block body %}

    {% include 'flashMessage.html.twig' %}

    <div class="row mb-4">
        <div class="col-6">
            <h2>Sites</h2>
        </div>
        <div class="col-6 text-end">
            <div class="btn-group">
                <a href="{{ path('app_site_index') }}" class="btn btn-primary"
                   data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <i class="fa-regular fa-file me-2"></i>
                    Novo
                </a>
            </div>
        </div>
    </div>

    <div class="card rounded-0">
        <div class="card-body p-0">

            <table class="table table-hover mb-0">
                <thead class="table-secondary text-light">
                <tr>
                    <th>ID</th>
                    <th>DOMAIN</th>
                    <th>TITLE</th>
                    <th>PHP_VERSION</th>
                    <th>DOCUMENT_ROOT</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
                </thead>

                <tbody>
                {% for site in sites %}
                    <tr>
                        <td>{{ site.id }}</td>
                        <td>{{ site.domain }}</td>
                        <td>{{ site.title }}</td>
                        <td>{{ site.phpVersion }}</td>
                        <td>{{ site.documentRoot }}</td>
                        <td>
                            <a href="{{ path('app_site_config', {id: site.id}) }}"
                               title="Criar ou atualizar configurações">
                                <i class="fa-solid fa-terminal"></i>
                            </a>
                        </td>
                        <td>
                            <a href="#editModal" data-bs-toggle="modal"
                               data-route="{{ path('app_site_edit', {id: site.id}) }}"
                               data-target="#editModalBody" class="editModal">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Site Create</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% include 'site/create.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby=""
         aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="">Site Edit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body" id="editModalBody"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).on('click', '.editModal', function (event) {
            event.preventDefault();

            let route = $(this).data('route');
            let target = $(this).data('target');
            let modal = $(`${target}`);

            $.get(route, function (data) {
                if (!data) {
                    return;
                }

                modal.html(data);
            });

        });
    </script>
{% endblock %}